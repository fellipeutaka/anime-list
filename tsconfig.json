{
  "compilerOptions": {
    "target": "es2022",
    "lib": ["es2022", "DOM"],
    "module": "ESNext",
    "jsx": "react-jsx",
    "noEmit": true,

    "strict": true,
    "verbatimModuleSyntax": true,

    "skipLibCheck": true,
    "isolatedModules": true,
    "resolveJsonModule": true,
    "moduleResolution": "bundler",
    "useDefineForClassFields": true,
    "allowImportingTsExtensions": true,

    "paths": {
      "~/*": ["./src/*"]
    }
  },

  "include": ["src"]
}
